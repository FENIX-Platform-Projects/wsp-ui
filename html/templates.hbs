<script type='text/x-handlebars-template' id='wsp_ui_structure'>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-12'>
                <h1>
                    <img src='images/fx-logo.png' style='width: 60px; heigh: 60px;'>
                    {{wsp}}
                </h1>
            </div>
        </div>
        <div class='row'>
            <div class='col-xs-2'>
                <button class='btn btn-primary btn-xs wsp-btn' data-role="wheat">
                    {{{wheat}}}
                </button>
                <button class='btn btn-primary btn-xs wsp-btn' data-role="population">
                    {{{population}}}
                </button>
            </div>
            <div class='col-xs-10'>
                {{#each box}}
                    <div class='col-xs-6'>
                        <div class='row box' id='{{box_id}}'>
                            <div data-role='box-header'>
                                <div class='row'>
                                    <div class='col-xs-12'>
                                        <div class='box-title'>
                                            {{{box_title}}}
                                        </div>
                                    </div>
                                </div>
                                <div class='row'>
                                    <div class='col-xs-6'>
                                        <select style='width: 100%;' data-role="dd" class='select2'>
                                        </select>
                                    </div>
                                    <div class='col-xs-3'>
                                        <button class='btn btn-primary btn-xs wsp-btn' data-role="anomaly">
                                            {{{anomaly}}}
                                        </button>
                                    </div>
                                    {{#if this.zscore}}
                                        <div class='col-xs-3'>
                                            <button class='btn btn-primary btn-xs wsp-btn' data-role="zscore">
                                                {{{z_score}}}
                                            </button>
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                            <hr>
                            <div data-role='box-content' data-role="chart-content">
                                <div class='row'>
                                    <div class='col-xs-12'>
                                        <div data-role="map" style="height: 450px; overflow: hidden;"></div>
                                    </div>
                                    <div class='col-xs-12'>
                                        <div data-role="chart"></div>
                                    </div>
                                </div>
                            </div>
                            <div data-role='box-footer'>
                                <div class='pull-right'>
                                    {{{footer_text}}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#if this.add_new_line}}
                        <!--</div>-->
                        <hr>
                        <!--<div class='row'>-->
                    {{/if}}
                {{/each}}
                </div>
            </div>
        </div>
    </div>
</script>